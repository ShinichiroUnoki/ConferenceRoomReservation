<!DOCTYPE html>
<html>
  <head>
    <title>ConferenceRoomReservation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!-- Bootstrap CSS -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if user_signed_in? %>
      <div class="container-fluid overall">
        <div class="row menu">
          <div class="col-2 bg-primary">
            <div class="row h-50 pl-5 pt-5 d-flex flex-column bd-highlight mb-3">
              <p><%= link_to "会議室一覧", "/", {class: "text-white p-2 bd-highlight"} %></p>
              <p><%= link_to "マイカレンダー", "/users/calendar", {class: "text-white p-2 bd-highlight"} %></p>
              <p><%= link_to "マイページ", "/users/edit", {class: "text-white p-2 bd-highlight"} %></p>
            </div>
            <div class="row h-50 pl-5">
              <div class="d-flex flex-column bd-highlight mb-3">
              <p><%= link_to "ログアウト", destroy_user_session_path, {method: :delete, class: "text-white p-2 bd-highlight"} %></p>
              </div>
            </div>
          </div>
          <div class="col-10">
            <div class="row border-bottom border-primary mb-3 py-3">
              <div class="col no-gutters">
                <% if user_signed_in? %>
                  <% @user = current_user %>
                  <% if @user.last_name && @user.first_name %>
                  <div class="float-right">
                    <%= @user.last_name + @user.first_name %>
                  </div>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="row contents">
              <div class="col no-gutters">
                <%= yield %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="container">
        <div class="row row justify-content-md-center">
          <div class="px-5 mt-5 col-md-auto border-primary border">
            <%= yield %>
          </div>
        </div>
      </div>
    <% end %>
  </body>
</html>
